{
	"compilerOptions": {
		"target": "ES2022",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"lib": ["ES2022"],
		"outDir": "./dist-electron",
		"rootDir": "./electron",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": ["node"],
		"sourceMap": true
	},
	"include": ["electron/**/*.ts"]
}

